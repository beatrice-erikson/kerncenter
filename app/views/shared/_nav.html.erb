	<style>
		.circle {
			display: inline-block;
			width: 120px; height: 120px;
			border: 15px solid;
	   		border-radius: 100px;
	   		text-decoration: none;
	   		color: black;
	   		background-color: white;
	   		transition: 0.3s;
	   		margin: 5px;
	   		box-shadow: -2px 2px 1px rgba(0,0,0,0.5);
	    }
	    .circle span {
	    	display: block;
	    	text-align: center;
			margin: 30px 5px;
			transition: inherit;
	    }
	    .circle:hover { width: 130px; height: 130px; margin: 0; }
		.circle:hover span { margin: 45px 5px; }
​
		/* unique color classes */
	    .blue { border-color: blue; }
	    .green { border-color: green; }
	    .red { border-color: red; }
	    .orange { border-color: orange; }
    </style>


